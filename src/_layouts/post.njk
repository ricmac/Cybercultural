---
layout: base
schema: blog
preloads:
  href: '/assets/fonts/robotomono/robotomono-variablefont_wght-webfont.woff2'
  as: 'font'
  type: 'font/woff2'
  crossorigin: true
---

<article class="region blog" data-pagefind-body>
  <div class="wrapper flow prose">
    <h1 class="red-text">{{ title }}</h1>
    
    {% set definedDate = date %} {% include "partials/date.njk" %} by <a href="/about/">Richard MacManus</a>

    <p>{{ description | safe }}</p>
    {{ content | safe }}

<form
  action="https://buttondown.email/api/emails/embed-subscribe/ricmac"
  method="post"
  target="popupwindow"
  onsubmit="window.open('https://buttondown.email/ricmac', 'popupwindow')"
  class="embeddable-buttondown-form"
>
  <label for="bd-email">Enter your email</label>
  <input type="email" name="email" id="bd-email" />
  
  <input type="submit" value="Subscribe" />
</form>

<h2>Fediverse</h2>
<div class="webmentions">

<p class="mastodon-link"><a href="https://mastodon.social/@ricmac" target="_blank"><img src="/assets/images/Mastodon_Logo.svg" width="32" height="32" alt="Mastodon" /></a> 
<a href="https://mastodon.social/@ricmac" target="_blank">Follow on Mastodon</a></p>

{% set currentPostUrl = 'https://cybercultural.com' + page.url %}

{% if webmentions %}
    {% for type, mentions in webmentions %}
      {% if type !== 'bookmark-of' and type !== 'mention-of' %}
        {% set filteredMentions = mentions | filterMentionsByTarget(currentPostUrl) %}
        {% if filteredMentions | length %}
          <section>
            <h3>
              {% if type === 'repost-of' %}
                Reposts
              {% elif type === 'like-of' %}
                Likes
              {% elif type === 'in-reply-to' %}
                Comments
              {% else %}
                {{ type }}
              {% endif %}
            </h3>

            <!-- Reposts and Likes -->
            {% if type === 'repost-of' or type === 'like-of' %}
              <p class="mention-reply">
                {% for mention in filteredMentions %} 
                  {% if mention.author and mention.author.photo and mention['wm-source'] %} 
                    <a href="{{ mention.author.url }}" target="_blank" rel="noopener noreferrer"> 
                      <img src="{{ mention.author.photo }}" alt="{{ mention.author.name }}" width="32" height="32">
                    </a> 
                  {% endif %} 
                  {% if not loop.last %}&nbsp;{% endif %} 
                {% endfor %} 
              </p>

            <!-- Replies -->
            {% elif type === 'in-reply-to' %}
              {% set sortedMentions = filteredMentions | sort(false, false, 'published') %}
              {% for mention in sortedMentions %}
                <p class="mention-reply">
                  <a href="{{ mention['wm-source'] }}" target="_blank" rel="noopener noreferrer">
                    <img src="{{ mention.author.photo }}" alt="{{ mention.author.name }}" width="32" height="32">
                  </a>
                  <span>{{ mention.content.html | striptags | safe }}</span>
                </p>
              {% endfor %}

            {% endif %}
          </section>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
{% endif %}

