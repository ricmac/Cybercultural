<base href="{{ page.url | default('') }}" />

<meta name="description" content="{% if seo.description %}{{ seo.description | default('') }}{% elif description %}{{ description | default('') }}{% else %}{{ meta.siteDescription | default('') }}{% endif %}" />

<meta name="theme-color" content="{{ meta.themeColor | default('#ffffff') }}" />
<meta name="robots" content="index, follow, max-image-preview:large" /><!-- All Search Engines -->
<meta name="generator" content="{{ eleventy.generator | default('Eleventy') }}" /><!-- thank you, Zach -->
<!-- Disable automatic detection and formatting of possible phone numbers -->
<meta name="format-detection" content="telephone=no" />
<!-- Helps prevent duplicate content issues -->
<link rel="canonical" href="{{ (meta.url | default('')) ~ (page.url | default('')) }}" />

{% if meta.meta_data.mastodonProfile %}
<!-- Mastodon verified site -->
<link rel="me" href="{{ meta.meta_data.mastodonProfile | default('') }}" />
<link rel="me" href="https://indieweb.social/@cybercultural" />
{% endif %}

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4Q2NWM3CX6"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-4Q2NWM3CX6');
</script>

<!-- Open Graph meta  -->
<meta property="og:url" content="{{ (meta.url | default('')) ~ (page.url | default('')) }}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{% if title %}{{ title | default('') }}{% else %}{{ meta.siteName | default('') }}{% endif %}" />
<meta property="og:image" content="{% if featureImage %}{{ (meta.url | default('')) ~ (featureImage | default('')) }}{% else %}{{ (meta.url | default('')) ~ (meta.defaultimage | default('')) }}{% endif %}" />
<meta property="og:image:alt" content="{% if title %}{{ title | default('') }}{% else %}{{ meta.siteName | default('') }}{% endif %} image" />
<meta property="og:description" content="{% if description %}{{ description | default('') }}{% else %}{{ meta.siteDescription | default('') }}{% endif %}" />
<meta property="og:site_name" content="{{ meta.siteName | default('') }}" />
<meta property="og:locale" content="{{ meta.locale | default('en_US') }}" />
<meta property="article:author" content="{{ meta.author.name }}" />
<meta property="fediverse:creator" content="@ricmac@mastodon.social" />


<!-- Twitter meta -->
<meta name="twitter:card" content="summary_large_image" />
{% if meta.meta_data.twitterSite %}
<meta name="twitter:site" content="{{ meta.meta_data.twitterSite | default('') }}" />
{% endif %}
{% if meta.meta_data.twitterCreator %}
<meta name="twitter:creator" content="{{ meta.meta_data.twitterCreator | default('') }}" />
{% endif %}
<meta name="twitter:dnt" content="on" />

<!-- Favicon -->
<link rel="icon" href="{{ '/favicon.ico' | url }}" sizes="any" />
<link rel="apple-touch-icon" sizes="180x180" href="{{ '/apple-touch-icon.png' | url }}" />
<link rel="icon" type="image/png" href="{{ '/favicon-32x32.png' | url }}" sizes="32x32" />
<link rel="icon" type="image/png" href="{{ '/favicon-16x16.png' | url }}" sizes="16x16" />
<link rel="manifest" href="{{ '/site.webmanifest' | url }}" />
